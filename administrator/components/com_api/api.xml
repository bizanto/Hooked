<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5" method="upgrade">
	<name>API</name>
	<creationDate>February 2011</creationDate>
	<author>Brian Edgerton</author>
	<copyright>2011 Edge Web Works, LLC</copyright>
	<authorEmail>brian@edgewebworks.com</authorEmail>
	<authorUrl>edgewebworks.com</authorUrl>
	<version>0.1</version>
	<description></description>
	<installfile>install/install.api.php</installfile>
    <uninstallfile>install/uninstall.api.php</uninstallfile>

	<install>
        <sql>
            <file charset="utf8" driver="mysql">install.mysql.sql</file>
        </sql>
    </install>

	<files folder="site">
        <file>api.php</file>
        <file>LICENSE.php</file>
        <file>router.php</file>
        <file>index.html</file>
		<folder>assets</folder>
        <folder>controllers</folder>
		<folder>libraries</folder>
        <folder>models</folder>
		<folder>tables</folder>
        <folder>views</folder>
    </files>

    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_api.ini</language>
    </languages>

	<administration>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_api.ini</language>
		</languages>
		<menu>Joomla! API</menu>
		<files folder="admin">
			<filename>api.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>LICENSE.php</filename>
			<filename>install.mysql.sql</filename>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>views</folder>
    	</files>
	</administration>
</install>
