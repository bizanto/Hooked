<install type="component" version="1.5.0" method="upgrade">
    <name>FriendManager</name>
    <version>1.1</version>
    <description>A component for managing Friends in Jomsocial</description>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <author>Socialable Studios</author>
    <authoremail>webmaster@socialables.com</authoremail>
    <authorurl>http://www.Socialables.com</authorurl>
    <copyright>Copyright (C) 2005 - 2010 Socialables.com All rights reserved.</copyright>
    <creationDate>16-Jan-2010</creationDate>
    <installfile>install.friendmanager.php</installfile>
    <uninstallfile>uninstall.friendmanager.php</uninstallfile>
    <files folder="site">
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>friendmanager.php</filename>
    </files>
    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_friendmanager.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.com_friendmanager.ini</language>
    </languages>
    <administration>
        <menu img="" link="option=com_friendmanager">FriendManager</menu>
        <submenu>
        	<menu img="" link="option=com_friendmanager">FriendManager</menu>
            <menu img="cpanel" view="backups">Backup Manager</menu>
            <menu img="" link="option=com_plugins&amp;filter_type=user">First Friend Plugin</menu>
        </submenu>
        <files folder="admin">
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>plg_firstfriend</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>CHANGELOG.php</filename>
            <filename>admin.friendmanager.php</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_friendmanager.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.com_friendmanager.ini</language>
        </languages>
    </administration>
</install>
